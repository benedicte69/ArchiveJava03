<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_element_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/image_border"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/list_items_padding"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    android:paddingTop="@dimen/list_items_padding">

    <ImageView
        android:id="@+id/image_home_wrapper"
        android:layout_width="0dp"
        android:layout_height="@dimen/home_image_height"
        android:layout_gravity="center_vertical"
        android:layout_weight="5"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            tools:ignore="NestedWeights" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="5"
            android:contentDescription="@string/description_more_info"
            android:src="@drawable/ic_more_info" />
    </LinearLayout>
</LinearLayout>

