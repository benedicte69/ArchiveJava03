<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_element_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/list_items_padding"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    android:paddingTop="@dimen/list_items_padding">

    <ImageView
        android:id="@+id/image_wrapper"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_image_height"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:background="@drawable/image_border"
        android:contentDescription="@string/app_name"
        android:paddingBottom="@dimen/list_items_img_padding"
        android:paddingTop="@dimen/list_items_img_padding"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:id="@+id/title_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/list_items_text_padding"
            android:paddingLeft="@dimen/list_items_text_padding"
            android:paddingRight="@dimen/list_items_text_padding"
            android:paddingStart="@dimen/list_items_text_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/list_items_title_font_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/short_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/list_items_text_padding"
                android:paddingLeft="@dimen/list_items_text_padding"
                android:paddingRight="@dimen/list_items_text_padding"
                android:paddingStart="@dimen/list_items_text_padding"
                android:paddingTop="@dimen/list_items_text_padding" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_more_details" />
</LinearLayout>