<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/tab_footer_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_back_intent"
            android:layout_width="@dimen/merge_header_back_height"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/description_back_home"
            android:paddingEnd="@dimen/padding"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:paddingStart="@dimen/padding"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/place_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/padding"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:paddingStart="@dimen/padding"
            android:textColor="@color/colorDarkPurple"
            android:textSize="@dimen/merge_header_back__font_size"
            android:textStyle="bold" />
    </LinearLayout>

</merge>