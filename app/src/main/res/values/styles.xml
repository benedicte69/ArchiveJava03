<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--header-->
    <style name="headerTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlueLight</item>
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Tabs. -->
    <style name="tabs" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_font_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/tab_height</item>
    </style>

    <!--Main Activity style to avoid overdraw warming-->
    <style name="MainActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBlueLight</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Web View style to avoid overdraw warming-->
    <style name="WebViewActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorBlueMap</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--Map Info Activity style to avoid overdraw warming.-->
    <style name="MapInfoActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/colorBlueMap</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--MapInfo labels wrappers and compounds-->
    <style name="wrapperMapInfoLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@color/colorBlueLight</item>
        <item name="android:paddingBottom">@dimen/padding</item>
        <item name="android:paddingTop">@dimen/padding</item>
    </style>

    <style name="wrapperMapInfoCompoundLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:textColor">@color/colorDarkPurple</item>
        <item name="android:drawablePadding">32dp</item>
    </style>

    <!--MapInfo browse the web-->
    <style name="wrapperMapInfoBrowseTheWeb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:autoLink">web</item>
        <item name="android:drawableEnd">@drawable/ic_navigate_next</item>
        <item name="android:drawableRight">@drawable/ic_navigate_next</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:paddingRight">@dimen/padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
